<section style="margin-left: 30rem;" class="login-page section-b-space">
  <form action="/auth/{{byId.id}}/login" method="POST">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <h3>Edit</h3>
          <div class="theme-card">
            <form class="theme-form">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="text" name="email" class="form-control" id="email" value="{{byId.email}}" required="">
              </div>
              <div class="form-group">
                <label for="review">Password</label>
                <input type="password" name="password" class="form-control" id="review"
                  value="{{byId.password}}" required="">
              </div>
               <button type="submit" class="btn btn-solid">Update</button>
            </form>
          </div>
        </div> 
  </form>
</section>
<!--Section ends-->